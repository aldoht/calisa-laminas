@await Component.InvokeAsync("NToastNotify")
<!DOCTYPE html>
<html lang="es-MX">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" href="@Url.Content("~/logos/calisa-icon.ico")">
    <style>
        .logo {
            max-width: 60% !important;
        }

        header, footer {
            background-color: #001F68!important;
        }

        .container-bg {
            background-color: #202841;
            padding: 2rem;
            color: #fff;
        }

        p {
            margin: 0;
        }

        .nav-ul {
            gap: 3rem;
            color: #f0f0f0;
        }

        .nav-ul a {
            color: #f0f0f0;
        }

        .dropdown-menu a {
            color: #000;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary-subtle">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-page="/Dashboard/Index">
                    <img src="@Url.Content("~/logos/calisa-small.png")" alt="Logo" width="60" height="48" class="d-inline-block align-text-top">
                </a>
                <div class="d-flex flex-row-reverse">
                    <ul class="nav-ul navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboard/Pendientes/Index">Pendientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboard/Credito/Index">Crédito</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboard/Contado/Index">Contado</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Menú
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-page="/Configuracion/Impresion/Index">Imprimir</a></li>
                                <li><a class="dropdown-item" asp-page="/Configuracion/CambiarContraseña/Index">Cambiar contraseña</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-page="/Configuracion/CerrarSesion/Index">Cerrar sesión</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-bg">
        <div class="mx-0 my-0 px-0 py-0 w-100 container-fluid">
            <main class="min-vh-100" role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="d-flex flex-wrap justify-content-between align-items-center py-4">
        <p class="col-12 col-md-4 mb-0 text-body-secondary text-center text-md-start ps-md-3 ps-0 text-white">2025 CALISA Aceros Linares</p>

        <a class="col-12 col-md-4 d-flex align-items-center justify-content-center my-3 my-md-0 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
            <img class="logo img-fluid" src="@Url.Content("~/logos/calisa-large.png")" alt="calisa logo">
        </a>

        <ul class="nav col-12 col-md-4 justify-content-center justify-content-md-end pe-md-3 pe-0">
            <li class="nav-item"><a asp-page="/Dashboard/Pendientes/Index" class="nav-link px-2 text-body-secondary">Pendientes</a></li>
            <li class="nav-item"><a asp-page="/Dashboard/Credito/Index" class="nav-link px-2 text-body-secondary">Crédito</a></li>
            <li class="nav-item"><a asp-page="/Dashboard/Contado/Index" class="nav-link px-2 text-body-secondary">Contado</a></li>
        </ul>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>